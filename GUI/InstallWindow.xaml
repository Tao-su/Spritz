<Window x:Class="SpritzGUI.InstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="InstallWindow" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <ScrollViewer Height="120">
                <TextBlock x:Name="TxbkInstall" TextWrapping="Wrap" FontSize="15" VerticalAlignment="Top" Margin="5" 
                           Text="Welcom to use Spritz! Please install all the packages used by Spritz!"/>
            </ScrollViewer>
            <Button x:Name="BtnInstall" Content="Install packages, first time set up!" Click="BtnInstall_Click"/>
            <Button x:Name="BtnAlreadyInstalled" Content="Already installed! skip this." Click="BtnAlreadyInstalled_Click"/>
        </StackPanel>
    </Grid>
</Window>
